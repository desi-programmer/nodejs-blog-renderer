    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous" />

  <title>Blogs - Node JS Blog Renderer</title>

  <!-- For SEO and META TAGS  -->
  <meta name="title" content="<%= info.title %>" />
  <meta name="description" content="<%= info.description %>" />
  <meta name="keywords"
    content="desi programmer,desi programmer youtube,desi programmer website,desi programmer blog, desi programmer videos,check internet connection using python,how to check internet connection using python,internet connection using python" />
  <meta name="robots" content="index, follow" />
  <meta name="googlebot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
  <meta name="bingbot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
