  <meta name="revisit-after" content="5 days" />
  <meta name="author" content="Desi Programmer" />

  <meta property="og:title" content="<%= info.title %>" />
  <meta property="og:description" content="<%= info.description %>" />
  <meta property="og:image" content="<%= info.image %>" />
  <meta property="og:url" content="<%= info.url %>" />
  <meta property="g:image:type" content="image/png" />
  <meta property="og:site_name" content="Desi Programmer" />

  <meta name="twitter:title" content="<%= info.title %>" />
  <meta name="twitter:description" content="<%= info.description %>" />
  <meta name="twitter:image" content="<%= info.image %>" />

  <!-- Font  -->
  <link rel="preconnect" href="https://fonts.gstatic.com" />
  <link href="https://fonts.googleapis.com/css2?family=Sen:wght@400;700&display=swap" rel="stylesheet" />
  <!-- highlight theme  -->
  <link id="highlightTheme" href="<%= info.highlightTheme %>" rel="stylesheet" />
  <link id="theme" rel="stylesheet" href="/static/blogStyles/light-mode.css">
  <script>
    var mode = localStorage.getItem('mode');
    if (mode) {
        const themeStylesheet = document.getElementById('theme');
        const highlightStylesheet = document.getElementById('highlightTheme');
        if (mode == "light") {
            themeStylesheet.href = '/static/blogStyles/light-mode.css';
            // remove this line if you dont want to change highlight theme to light
            highlightStylesheet.href = '<%= info.highlightLightTheme %>';
        } else {
            themeStylesheet.href = '/static/blogStyles/dark-mode.css';
            // remove this line if you dont want to change highlight theme to light
            highlightStylesheet.href = '<%= info.highlightTheme %>';
        }
    }
</script>
</head>

<body>
  <%- include('partials/nav.ejs') %>
    <!-- Here Lies the content  -->

    <div class="container py-3">
      <div class="row justify-content-center">
        <div class="col-md-8 col-lg-10">
          <h1>
            <%= info.title %>
          </h1>
          <button id="theme-toggle">Turn on the Lights ðŸŒž</button>
          <hr />
          <%- blogData %>
        </div>
      </div>
    </div>

    <%- include('partials/footer.ejs') %>
      <script src="<%= info.highlight %>"></script>
      <script>
        hljs.initHighlightingOnLoad();
      </script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>
        <script>
          document.addEventListener('DOMContentLoaded', () => {
                    // localStorage.setItem('mode','dark');

                    const themeStylesheet = document.getElementById('theme');
                    const themeToggle = document.getElementById('theme-toggle');
        const highlightStylesheet = document.getElementById('highlightTheme');
                    themeToggle.addEventListener('click', () => {
                        // if it's light -> go dark
                        if (themeStylesheet.href.includes('light')) {
                            themeStylesheet.href = '/static/blogStyles/dark-mode.css';
                            // remove this line if you dont want to change highlight theme to light
            highlightStylesheet.href = '<%= info.highlightTheme %>';
                            themeToggle.innerText = 'Turn the Lights on ðŸŒž';
                            localStorage.setItem('mode', 'dark');
                        } else {
                            // if it's dark -> go light
                            themeStylesheet.href = '/static/blogStyles/light-mode.css';
                            // remove this line if you dont want to change highlight theme to light
            highlightStylesheet.href = '<%= info.highlightLightTheme %>';
                            themeToggle.innerText = 'Turn off the Lights ðŸŒš';
                            localStorage.setItem('mode', 'light');

                        }
                    })
                })
        </script>

</body>

</html>